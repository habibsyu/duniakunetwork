{
    "name": "duniaku/network-website",
    "description": "Duniaku Network Gaming Community Website",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0",
        "codeigniter4/framework": "^4.4"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "mikey179/vfsstream": "^1.6",
        "phpunit/phpunit": "^9.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Support\\": "tests/_support/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "support": {
        "source": "https://github.com/duniaku/network-website",
        "docs": "https://duniaku.net/docs"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}